{
  "name": "express-rest-api-boilerplate",
  "version": "1.0.0",
  "author": "Javier Galarza <jegj57@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jegj/express-rest-api-boilerplate.git"
  },
  "homepage": "https://github.com/jegj/express-rest-api-boilerplate#readme",
  "bugs": {
    "url": "https://github.com/jegj/express-rest-api-boilerplate/issues"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon ./bin/www",
    "create-sqlite-db": "shx touch ./db/database.sqlite",
    "drop-sqlite-db": "shx rm ./db/database.sqlite",
    "lint": "eslint ./api/. ./bin/www",
    "prepush": "npm test",
    "pretest": "npm run lint",
    "production": "NODE_ENV=production node ./bin/www",
    "test": "exit 0",
    "test-fake": "npm run create-sqlite-db; cross-env NODE_ENV=testing jest --coverage; npm run drop-sqlite-db",
    "test-ci": "jest --coverage --forceExit"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "body-parser": "1.20.0",
    "cors": "2.8.5",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "helmet": "5.1.1"
  }
}
